# =============================================================================
# .env - Configuration de l'environnement JavaCard Docker Emulator
# =============================================================================

# jCardSim Configuration
JCARDSIM_PORT=9025
JCARDSIM_HOST=jcardsim

# OpenSC Configuration
OPENSC_DEBUG=3

# PKCS#11 Module Path (Linux x64)
PKCS11_MODULE=/usr/lib/x86_64-linux-gnu/pkcs11/opensc-pkcs11.so

# Token PIN (pour les tests - NE PAS UTILISER EN PRODUCTION)
TOKEN_PIN=12345678

# Compose Project Name
COMPOSE_PROJECT_NAME=javacard-emulator
